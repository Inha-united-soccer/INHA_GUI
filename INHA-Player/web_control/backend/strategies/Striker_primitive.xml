<root main_tree_to_execute="Striker">
 <BehaviorTree ID="Striker">
  <Fallback name="Sel">
   <!-- 1. Very Close: Just KICK blindly -->
   <Sequence name="Seq_Kick">
    <Condition ID="CheckBallDist" op="LT" dist="0.3" />
    <Script code="striker_state='kick'" />
    <Action ID="Kick" speed_limit="1.3" vx_limit="1.3" vy_limit="0.5" min_msec_kick="1000" msecs_stablize="1000" kick_type="kick" kick_speed="1.3" />
   </Sequence>
   <!-- 2. Otherwise: CHASE endlessly -->
   <Sequence name="Seq_Chase">
    <Script code="striker_state='chase'" />
    <Action ID="Chase" vx_limit="0.9" vy_limit="0.2" vtheta_limit="1.0" dist="0.4" safe_dist="0.5" />
   </Sequence>
  </Fallback>
 </BehaviorTree>
</root>
